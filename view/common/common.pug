doctype html
html
  head
    title #{title}
    meta(name='keywords', content='HTML, CSS, JavaScript')
    meta(name='author', content='dotula')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')

    link(rel='stylesheet', type='text/css', href='/css/style.css')
    script(src="/js/index_script.js")
    

    block linkOrScript
  body
    .my_container
        .header
            .header_gradient
            h1.header_gradient_title ESCAPE FROM REALITY
            .menu_main
                .bg_menu
                nav#main.navbar.navbar-expand-sm
                  ul.navbar-nav
                    li.nav-item
                      a.nav-link(href='../') Home
                    li.nav-item
                      a.nav-link(href='/gallery') Gallery
                    li.nav-item.dropdown
                      a#navbardrop.nav-link.dropdown-toggle(href='#', data-toggle='dropdown') Project
                      .dropdown-menu
                        a.dropdown-item(href='/customer') Customer
                        a.dropdown-item(href='/film') Film
                  form.form-inline.my-2.my-lg-0
                    .form-control.mr-sm-2.user_lbl=  user?user:""
                  .btn.btn-logout.mr-sm-0 logout



        .body
          .content
            block content
        .footer
            .row.row-footer
